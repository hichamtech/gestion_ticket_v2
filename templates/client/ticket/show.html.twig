{% extends 'client.html.twig' %}

{% block title %}Ticket{% endblock %}

{% block body %}
    <h1>Ticket</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ticket.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ ticket.titre }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ ticket.status ? 'Termine' : 'En cours' }}</td>
            </tr>
            <tr>
                <th>Priorite</th>
                <td>{{ ticket.priorite }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ ticket.date ? ticket.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
         
        </tbody>
    </table>


    <a href="{{ path('ticket_edit', {'id': ticket.id}) }}">Modifier</a>

    {{ include('client/ticket/_delete_form.html.twig') }}
{% endblock %}
